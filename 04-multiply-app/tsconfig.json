{
  "include": ["src/**/*.ts", "src/**/*.test.ts"],
  "exclude": ["node_modules", "dist", "test.ts"],
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist/",
    "module": "commonjs",
    "target": "es2016",
    "types": ["node", "jest"],
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "skipLibCheck": true
  }
}
